<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:osgi="http://www.springframework.org/schema/osgi"
  xsi:schemaLocation="http://www.springframework.org/schema/beans 
                      http://www.springframework.org/schema/beans/spring-beans.xsd
                      http://www.springframework.org/schema/osgi 
                      http://www.springframework.org/schema/osgi/spring-osgi.xsd">

  <!-- Gets the recording advice -->
  <osgi:reference id="recordingAdvice" 
                  interface="net.bioclipse.recording.IRecordingAdvice" />

  <osgi:reference id="createJobAdvice"
                  interface="net.bioclipse.ui.jobs.ICreateJobAdvice" />
  <osgi:reference id="guiActionAdvice"
                  interface="net.bioclipse.scripting.ui.business.IGuiActionAdvice" />
  <osgi:reference id="JSJobCreatorAdvice" 
                  interface="net.bioclipse.scripting.business.IJSJobCreatorAdvice"/>
  <!--+ 
      | Point cut advisor that inserts the recording advice on all methods.
      | (The class does nothing on toString() 
      |  since a regexp for that behavior failed)
      +-->
  <bean id="recordingAdvisor"
  		class="org.springframework.aop.support.RegexpMethodPointcutAdvisor">
        <property name="advice"  ref="recordingAdvice" />
  		<property name="pattern" value=".*" />
  </bean>
  
  <bean id="guiActionAdvisor"
        class="org.springframework.aop.support.RegexpMethodPointcutAdvisor">
        <property name="advice"  ref="guiActionAdvice" />
        <property name="pattern" value=".*" />
  </bean>

  <!-- The target that later on will be proxied. Our manager class. -->
  <bean id="uiManagerTarget" 
        class="net.bioclipse.ui.business.UIManager">
  </bean>
  
  <!--+ 
      | The proxy puts together the managerTarget, the pointcut advisor
      | and defines which interfaces to be proxied 
      +-->
  <bean id="uiManager"
  		class="org.springframework.aop.framework.ProxyFactoryBean">
  	<property name="target" 
  	          ref="uiManagerTarget" />
  	<property name="proxyInterfaces" 
  	          value="net.bioclipse.ui.business.IUIManager" />
  	<property name="interceptorNames">
        <list>
           <value>recordingAdvisor</value>
           <value>createJobAdvice</value>
        </list>
    </property>
  </bean>
  
  <bean id="jsuiManager"
        class="org.springframework.aop.framework.ProxyFactoryBean">
    <property name="target" 
              ref="uiManagerTarget" />
    <property name="proxyInterfaces" 
              value="net.bioclipse.ui.business.IJSUIManager" />
    <property name="interceptorNames" >
        <list>
            <value>JSJobCreatorAdvice</value>
            <value>guiActionAdvisor</value>            
        </list>
    </property>    
  </bean>

  <!-- publishes the final manager (the proxy) -->
  <osgi:service
    id="uiManagerOSGI" 
    ref="uiManager"
    interface="net.bioclipse.ui.business.IUIManager" />
  
  <osgi:service
    id="jsuiManagerOSGI"
    ref="jsuiManager"
    interface="net.bioclipse.ui.business.IJSUIManager" />
</beans>
