<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         point="org.eclipse.ui.exportWizards">
      <category
            id="net.bioclipse.chemoinformatics.exportwizards.category"
            name="Chemoinformatics">
      </category>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="net.bioclipse.chemoinformatics.views.category"
            name="Chemoinformatics">
      </category>
   </extension>
   <extension
         point="org.eclipse.ui.importWizards">
      <category
            id="net.bioclipse.chemoinformatics.importwizards.category"
            name="Chemoinformatics">
      </category>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <category
            id="net.bioclipse.cdk.ChemistryFiles"
            name="Chemistry Files"/>
      <wizard
            category="net.bioclipse.cdk.ChemistryFiles"
            class="net.bioclipse.chemoinformatics.wizards.NewMDLMolfileWizard"
            icon="icons/molecule3D.png"
            id="net.bioclipse.chemoinformatics.wizards.NewMDLMolfileWizard"
            name="New MDL Molfile"
            preferredPerspectives="net.bioclipse.chemoinformatics.ChemoinformaticsPerspective">
      </wizard>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <wizard
            category="net.bioclipse.cdk.ChemistryFiles"
            class="net.bioclipse.chemoinformatics.wizards.NewCMLFileWizard"
            icon="icons/molecule3D.png"
            id="net.bioclipse.chemoinformatics.wizards.NewCMLFileWizard"
            name="New CML File"
            preferredPerspectives="net.bioclipse.chemoinformatics.ChemoinformaticsPerspective">
      </wizard>
   </extension>

  <extension point="org.eclipse.ui.navigator.navigatorContent">
    <commonWizard type="new"
        wizardId="net.bioclipse.chemoinformatics.wizards.NewCMLFileWizard">
      <enablement>
        <or>
          <adapt type="org.eclipse.core.resources.IFile" />
          <adapt type="org.eclipse.core.resources.IFolder" />
          <adapt type="org.eclipse.core.resources.IProject" />
          <adapt type="org.eclipse.core.resources.IWorkspaceRoot" />
        </or>
      </enablement>
    </commonWizard>
  </extension>

   <extension point="org.eclipse.ui.perspectives">
      <perspective name="Chemoinformatics"
          class="net.bioclipse.chemoinformatics.ChemoinformaticsPerspective"
          id="net.bioclipse.chemoinformatics.ChemoinformaticsPerspective"
          icon="icons/molecule3D.png">
      </perspective>
   </extension>

</plugin>
